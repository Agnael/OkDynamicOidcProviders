@model LoginViewModel

<style>
    .striped-overlay {
        background: 
            repeating-linear-gradient(
                45deg, 
                transparent, 
                transparent 10px, 
                rgba(204, 0, 0, .2) 10px, 
                rgba(204, 0, 0, .2) 20px);
        position: absolute;
        width: 100%;
        height: 100%;
        min-height: 100px;
        z-index: 1000;
        margin-top: -15px;
        margin-left: -15px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-4">
            <h5>Local login</h5>
            <div class="col-12" style="padding-top: 15px; padding-bottom: 15px;">
                <div class="striped-overlay"></div>
                <form asp-controller="Auth" asp-action="Login">
                    <div class="form-group">
                        <label for="txtEmail">
                            Email
                        </label>

                        <input type="email"
                               class="form-control"
                               id="txtEmail"
                               aria-describedby="emailHelp"
                               placeholder="Enter email"
                               disabled>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">
                            Password
                        </label>

                        <input type="password"
                               class="form-control"
                               id="exampleInputPassword1"
                               placeholder="Password"
                               disabled>
                    </div>

                    <button type="submit" class="btn btn-primary" disabled>
                        Submit
                    </button>
                </form>
            </div>
        </div>
        <div class="col-8">
            <div class="col-12">
                @if (Model.AvailableExternalProviders.Count() > 0)
                {
                    <div class="form-group">
                        <h5>External providers</h5>
                        @foreach (var provider in Model.AvailableExternalProviders)
                        {
                            <a class="btn btn-dark"
                               asp-controller="Auth"
                               asp-action="StartChallenge"
                               asp-route-scheme="@provider.Name"
                               asp-route-returnUrl="@Model.ReturnUrl">
                                @provider.Name
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>