
@model IEnumerable<OidcProviderPeak>

@{ ViewData["Title"] = "OIDC Settings"; }

<div class="row">
    <div class="col-12">
        <h1 class="display-4">External OIDC Providers</h1>
    </div>
</div>

<div class="row" style="padding: 5px 0 10px 0;">
    <div class="col-12">
        <a href="@Url.Action("Create", "OidcProviders")" class="btn btn-outline-primary">
            Add provider
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ProviderId</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <text>No OIDC providers found</text>
                    }
                    else
                    {
                        foreach (var provider in Model)
                        {
                            <tr>
                                <td>@provider.OidcProviderId</td>
                                <td>@provider.Name</td>
                                <td>
                                    <a href="@Url.Action("Edit", "OidcProviders", new { providerId = provider.OidcProviderId })">
                                        Edit
                                    </a>
                                    <a href="@Url.Action("Delete", "OidcProviders", new { providerId = provider.OidcProviderId })">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
